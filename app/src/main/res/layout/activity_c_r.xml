<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/cr_try"
    android:orientation="vertical"
    tools:context=".CRActivity">
<!--    <ImageView
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:background="@drawable/cr_super"
        />-->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="With great power,\n comes great responsibility "
        android:textSize="20sp"
        android:textColor="@android:color/white"
        android:layout_centerHorizontal="true"
        android:id="@+id/text1"
        android:textStyle="bold|italic"
        android:layout_marginTop="70dp"
        android:gravity="center_horizontal"
        android:layout_marginBottom="60dp"

        />
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/text1"
        android:padding="15dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:background="@color/light"

            android:orientation="vertical"
            android:gravity="center"
            >
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:elevation="10dp"
                app:cardCornerRadius="15dp"
                android:layout_margin="10dp"
                android:id="@+id/cardCreateClass"
                app:cardBackgroundColor="#B2D7E8"
                android:padding="5dp">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    >
                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/cr_class"
                        android:layout_margin="10dp"
                        android:id="@+id/imageProfile"
                        />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_toEndOf="@+id/imageProfile"
                        android:layout_marginLeft="10dp"
                        android:layout_margin="5dp"
                        android:padding="5dp"
                        android:orientation="vertical"
                        >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Create a class routine"

                            android:textStyle="bold"
                            android:textSize="14sp"

                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Set date,section and classes.Then send it to your classmates."
                            android:layout_marginTop="5dp"
                            android:textSize="12sp"

                            />
                    </LinearLayout>
                </RelativeLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:elevation="10dp"
                app:cardCornerRadius="15dp"
                android:id="@+id/cardCreateExam"
                android:layout_margin="15dp"
                app:cardBackgroundColor="#B2D7E8"
                android:padding="5dp">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    >
                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/cr_exam"
                        android:layout_margin="10dp"
                        android:id="@+id/imageProfile1"
                        />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_toEndOf="@+id/imageProfile1"
                        android:layout_marginLeft="10dp"
                        android:layout_margin="5dp"
                        android:padding="5dp"
                        android:orientation="vertical"
                        >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Create an exam schedule"
                            android:textStyle="bold"
                            android:textSize="14sp"

                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Set time,date,subject,syllabus and resources.Then send it to your classmates."
                            android:layout_marginTop="5dp"
                            android:textSize="12sp"
                            />
                    </LinearLayout>
                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:elevation="10dp"
                app:cardCornerRadius="15dp"
                android:layout_margin="10dp"
                android:id="@+id/cardCreateTeacherCourse"
                app:cardBackgroundColor="#B2D7E8"
                android:padding="5dp">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    >
                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/cr_books"
                        android:layout_margin="10dp"
                        android:id="@+id/imageProfile6"
                        />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_toEndOf="@+id/imageProfile6"
                        android:layout_marginLeft="10dp"
                        android:layout_margin="5dp"
                        android:padding="5dp"
                        android:orientation="vertical"
                        >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Create course information"
                            android:textStyle="bold"
                            android:textSize="14sp"

                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Set the name of the course,name of the teacher who will take the course,its code and credit."
                            android:layout_marginTop="5dp"
                            android:textSize="12sp"

                            />
                    </LinearLayout>
                </RelativeLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:elevation="10dp"
                app:cardCornerRadius="15dp"
                android:id="@+id/cardChangeCode"
                android:layout_margin="15dp"
                app:cardBackgroundColor="#B2D7E8"
                android:padding="5dp">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    >
                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"

                        android:src="@drawable/cr_ic"
                        android:layout_margin="10dp"
                        android:id="@+id/imageProfile2"
                        />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_toEndOf="@+id/imageProfile2"
                        android:layout_marginStart="10dp"
                        android:layout_margin="5dp"
                        android:padding="5dp"
                        android:orientation="vertical"
                        >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Change class invitation code"
                            android:textStyle="bold"
                            android:textSize="14sp"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:textSize="12sp"
                            android:lines="2"
                            android:text="Change invitation code for safety."
                            />
                    </LinearLayout>
                </RelativeLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:elevation="10dp"
                app:cardCornerRadius="15dp"
                android:layout_margin="15dp"
                app:cardBackgroundColor="#B2D7E8"
                android:id="@+id/cardClassControl"
                android:padding="5dp">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    >
                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/cr_cc"
                        android:layout_margin="10dp"
                        android:id="@+id/imageProfile3"
                        />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_toEndOf="@+id/imageProfile3"
                        android:layout_marginStart="10dp"
                        android:layout_margin="5dp"
                        android:padding="5dp"
                        android:orientation="vertical"
                        >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Class control"
                            android:textStyle="bold"
                            android:textSize="14sp"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:textSize="12sp"
                            android:text="Kick out any unwanted student.Please take everyone's consent beforehand."
                            />
                    </LinearLayout>
                </RelativeLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:elevation="10dp"
                app:cardCornerRadius="15dp"
                android:layout_margin="15dp"
                android:id="@+id/cardCRSettings"
                app:cardBackgroundColor="#B2D7E8"
                android:padding="5dp">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    >
                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"

                        android:src="@drawable/cr_cr"
                        android:layout_margin="10dp"
                        android:id="@+id/imageProfile4"
                        />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_toEndOf="@+id/imageProfile4"
                        android:layout_marginLeft="10dp"
                        android:layout_margin="5dp"
                        android:padding="5dp"
                        android:orientation="vertical"
                        >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Class Representative Settings"
                            android:textStyle="bold"
                            android:textSize="14sp"
                            android:id="@+id/studentName"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:textSize="12sp"
                            android:id="@+id/bloodGroup"
                            android:text="Appoint someone CR , second CR or leave CRship."
                            />
                    </LinearLayout>
                </RelativeLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>
    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:id="@+id/btnBack"
        android:layout_margin="20dp"
        android:background="@drawable/ic_baseline_arrow_back_ios_24"
        android:backgroundTint="@android:color/white"
        />








</RelativeLayout>