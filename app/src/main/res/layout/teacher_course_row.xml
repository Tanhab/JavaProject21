<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="10dp"
    app:cardElevation="5dp"
    app:cardCornerRadius="15dp"
    android:padding="5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#E5F3F4"

        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_margin="5dp"
            android:padding="5dp"
            android:orientation="vertical"
            android:layout_marginBottom="10dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Course name"
                android:textColor="@color/colorPrimary"
                android:layout_gravity="center"
                android:textStyle="bold"
                android:textSize="20sp"
                android:fontFamily="@font/nunito_sans_bold"
                android:id="@+id/courseName"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Course Teacher: "
                android:fontFamily="@font/roboto"
                android:textColor="@android:color/black"
                android:layout_marginTop="16dp"
                android:textSize="16sp"
                android:id="@+id/teacherName"
                />




            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Course code: "
                android:fontFamily="@font/roboto"
                android:textColor="@android:color/black"
                android:textSize="16sp"
                android:layout_marginTop="10dp"
                android:id="@+id/courseCode"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Course credit: "
                android:fontFamily="@font/roboto"
                android:textColor="@android:color/black"               android:layout_marginTop="10dp"
                android:textSize="16sp"
                android:id="@+id/courseCredit"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Teacher's Designation: "
                android:fontFamily="@font/roboto"
                android:textColor="@android:color/black"
                android:textSize="16sp"
                android:layout_marginTop="10dp"
                android:id="@+id/teacherDesignation"
                />




        </LinearLayout>


    </RelativeLayout>


</androidx.cardview.widget.CardView>