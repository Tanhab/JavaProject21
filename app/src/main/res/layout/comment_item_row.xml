<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="10dp"
    android:layout_marginTop="10dp"
    android:elevation="5dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        >
        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:src="@drawable/profile_placeholder"
            android:layout_margin="8dp"
            android:id="@+id/commentProfilePic"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name"
            android:textColor="@color/colorPrimary"
            android:textSize="14sp"
            android:textStyle="bold"
            android:layout_toEndOf="@+id/commentProfilePic"
            android:layout_marginTop="8dp"
            android:layout_marginStart="5dp"
            android:id="@+id/txtNameComment"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="date"
            android:textColor="@android:color/black"
            android:textSize="12sp"
            android:layout_toEndOf="@+id/commentProfilePic"
            android:layout_below="@+id/txtNameComment"
            android:layout_marginStart="5dp"
            android:id="@+id/txtDate"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:text="comment"
            android:textColor="@android:color/black"
            android:textSize="16sp"
            android:layout_below="@+id/commentProfilePic"
            android:layout_marginBottom="5dp"
            android:id="@+id/commentMessage"
            />


    </RelativeLayout>

</androidx.cardview.widget.CardView>